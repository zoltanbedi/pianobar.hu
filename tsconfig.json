{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["dom", "esnext"],
      "jsx": "react",
      "module": "esnext",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["./src/**/*"]
  }
